#!/bin/env xs2
# vim: et ts=4 sw=4

let header = "#!/,/xs-run";

!mkdir -p "bin";

let a = "ci/ci-tar";
let b = "bin/ci-tar";
!xs-compile $a $b;
!xs-make-self-exec $b $header;
!chmod 755 $a $b;

let a = "ci/ci-install-local";
let b = "bin/ci-install-local";
!xs-compile $a $b;
!xs-make-self-exec $b $header;
!chmod 755 $a $b;

let a = "ci/ci-compile";
let b = "bin/ci-compile";
!xs-compile $a $b;
!xs-make-self-exec $b $header;
!chmod 755 $a $b;

!lsd
    --tree
    --long
    ci
    "bin"
;

0
