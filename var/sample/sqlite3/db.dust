# vim: et ft=scala ts=4 sw=4

def DATABASE = "run/dust.stdlib.db";

def sql = {
    !mkdir -p run;
    !sqlite3 $DATABASE $args
}

def list = {
    let script = fmt "select rowid, * from %s;" $args;
    !sqlite3 <$script --bail $DATABASE
}

def id = {
    let script = fmt "select rowid from %s where %s;" $args;
    !sqlite3 <$script --bail $DATABASE
}

