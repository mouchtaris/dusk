# vim: et ft=scala ts=4 sw=4

def DB = DB_IMAGES;

def lib-image-init = {
    !rm -rvf $DB;
    src sql = p r#"
        create table Image (name text);
    "# $args;
    !sqlite3 <$sql $DB
}

def name = {
    src sql = fmt r#"
        insert into Image (name) values ("%s");
    "# $args;
    src sql = !tee <$sql /dev/stderr;
    !sqlite3 <$sql $DB
}

